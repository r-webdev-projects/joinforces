source 'https://rubygems.org'

gem 'rails', '4.2.1'
gem 'pg'

# For front-end development
gem 'sass-rails'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'
gem 'slim'
gem "autoprefixer-rails"

# For inline SVGs
gem 'inline_svg'

# For friendlier URLs
